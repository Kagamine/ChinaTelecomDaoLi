@{ 
    ViewBag.Title = "客户经理饼图";
}
<link href="~/styles/jquery.jqplot.min.css" rel="stylesheet" />
<script src="~/scripts/jquery.jqplot.min.js"></script>
<script src="~/scripts/jqplot.pierenderer.min.js"></script>
<script src="~/scripts/jqplot.donutrenderer.min.js"></script>
<h2>@ViewBag.Title</h2>
<div id="chart" style="width:100%; height: 800px;"></div>
<script>
    $(document).ready(function ()
    {
        $.getJSON("/Customer/GetContractorPie", {}, function (data) {
            $.jqplot('chart', [data], {
                seriesDefaults: {
                    renderer: $.jqplot.PieRenderer,
                    rendererOptions: {
                        showDataLabels: true,
                        diameter: 300
                    }
                },
                legend: {
                    show: true,
                    location: "e"
                }
            });
        });
    });
</script>